       <body>
          <div>
             <ab type="page" n="3" xml:lang="it">
                    <lb n="1"  facs="#facs_pag3_r1" xml:id="pag3_r1"/>
                    <date>25 Aprile 1920</date> - <date>29 Luglio 1940</date> - Vent'anni<pc type="colon">:</pc>

                    <lb n="2" facs="#facs_pag3_r2" xml:id="pag3_r2"/>
                      appena il <unclear reason="illegible" cert="low">luccicare</unclear> della vita<pc type="comma">,</pc> ma breve e lumino
                    
                    <lb n="3" facs="#facs_pag3_r3" xml:id="pag3_r3" break="no" rend="double_stroke"/>
                      so veramente<pc type="comma">,</pc> come dice il ricordo marmoreo<pc type="comma">,</pc>
                    
                    <lb n="4" facs="#facs_pag3_r4" xml:id="pag3_r4"/>
                      <add place="above">tenne fama di <gap quantity="6" unit="chars" reason="illegible"/> che si svolgono tra casa e scuola<pc type="comma">,</pc></add>
                    
                    <lb n="5" facs="#facs_pag3_r5" xml:id="pag3_r5"/>
                      promessa<pc type="comma">,</pc> speranza<pc type="comma">,</pc> strazio<pc type="period">.</pc> Concedete a chi
                    
                    <lb n="6" facs="#facs_pag3_r6" xml:id="pag3_r6"/>
                      <add place="above">il formarsi e lo sbocciare di un anima eletta<pc type="comma">,</pc> di un'intelligenza</add>
                    
                    <lb n="7" facs="#facs_pag3_r7" xml:id="pag3_r7"/>
                      L'ha conosciuto nella prima infanzia<pc type="comma">,</pc> di celebra
                    
                    <lb n="8" facs="#facs_pag3_r8" xml:id="pag3_r8"/>
                      <add place="above">eccezionale<pc type="colon">:</pc></add>
                    
                    <lb n="9" facs="#facs_pag3_r9" xml:id="pag3_r9" break="no" rend="double_stroke"/>
                      re anche i ricordi di quei primi anni<pc type="comma">,</pc> <del rend="overstrike">di</del> felici<pc type="period">.</pc>
                    
                    <lb n="10" facs="#facs_pag3_r10" xml:id="pag3_r10"/>
                      <del rend="overstrike">quando si apriva giocondamente alla vita<pc type="period">.</pc></del>
             </ab>
